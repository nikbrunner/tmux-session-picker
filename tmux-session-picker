#!/usr/bin/env bash

# Layout configuration
TMUX_LAYOUT="${TMUX_LAYOUT:-ide}"
TMUX_LAYOUTS_DIR="${TMUX_LAYOUTS_DIR:-$HOME/.config/tmux/layouts}"

# Claude status configuration (opt-in)
TMUX_SESSION_PICKER_CLAUDE_STATUS="${TMUX_SESSION_PICKER_CLAUDE_STATUS:-0}"
CLAUDE_STATUS_DIR="$HOME/.cache/tmux-session-picker"

# Check if running inside tmux
if [[ -z "$TMUX" ]]; then
    echo "Error: tmux-session-picker must be run from within tmux"
    exit 1
fi

# Apply layout to a session
apply_layout() {
    local session_name="$1"
    local working_dir="$2"
    local layout_script="${TMUX_LAYOUTS_DIR}/${TMUX_LAYOUT}.sh"

    if [[ -n "$TMUX_LAYOUT" && -x "$layout_script" ]]; then
        "$layout_script" "$session_name" "$working_dir"
    fi
}

# Check dependencies
if ! command -v fzf &>/dev/null; then
    echo "Error: fzf is not installed"
    exit 1
fi

# Format seconds into human-readable relative time
format_relative_time() {
    local seconds=$1
    if (( seconds < 60 )); then
        echo "${seconds}s ago"
    elif (( seconds < 3600 )); then
        echo "$(( seconds / 60 ))m ago"
    elif (( seconds < 86400 )); then
        echo "$(( seconds / 3600 ))h ago"
    else
        echo "$(( seconds / 86400 ))d ago"
    fi
}

# Check if Claude is running in a session (process detection)
has_claude_process() {
    local session="$1"
    local pane_pids
    pane_pids=$(tmux list-panes -t "$session" -F '#{pane_pid}' 2>/dev/null)

    for pane_pid in $pane_pids; do
        if pgrep -P "$pane_pid" -f "claude" >/dev/null 2>&1; then
            return 0
        fi
    done
    return 1
}

# Get Claude status for a session
get_claude_status() {
    [[ "$TMUX_SESSION_PICKER_CLAUDE_STATUS" != "1" ]] && return

    local session="$1"
    local status_file="$CLAUDE_STATUS_DIR/${session}.status"

    # If status file exists, use hook-based status with timing
    if [[ -f "$status_file" ]]; then
        local content
        content=$(cat "$status_file" 2>/dev/null)
        local claude_state="${content%%:*}"
        local timestamp="${content##*:}"
        local now
        now=$(date +%s)
        local age=$((now - timestamp))
        local age_str

        if (( age < 60 )); then
            age_str="${age}s"
        elif (( age < 3600 )); then
            age_str="$((age / 60))m"
        else
            age_str="$((age / 3600))h"
        fi

        local claude_orange=$'\033[38;2;217;119;87m'
        local yellow=$'\033[33m'
        local bright_green=$'\033[38;2;80;250;123m'
        local dim=$'\033[90m'
        local reset=$'\033[0m'
        case "$claude_state" in
            "new")     echo "[${claude_orange}CC:${reset} ${dim}new${reset}]" ;;
            "working") echo "[${claude_orange}CC:${reset} ${yellow}working${reset} ${age_str}]" ;;
            "waiting") echo "[${claude_orange}CC:${reset} ${bright_green}waiting${reset} ${age_str}]" ;;
        esac
        return
    fi

    # Fallback: detect Claude process (legacy session without status file)
    if has_claude_process "$session"; then
        local claude_orange=$'\033[38;2;217;119;87m'
        local dim=$'\033[90m'
        local reset=$'\033[0m'
        echo "[${claude_orange}CC:${reset} ${dim}?${reset}]"
    fi
}

# Cleanup stale status files for dead sessions
cleanup_stale_status() {
    [[ "$TMUX_SESSION_PICKER_CLAUDE_STATUS" != "1" ]] && return
    [[ ! -d "$CLAUDE_STATUS_DIR" ]] && return

    local active_sessions
    active_sessions=$(tmux list-sessions -F '#S' 2>/dev/null)

    for status_file in "$CLAUDE_STATUS_DIR"/*.status; do
        [[ ! -f "$status_file" ]] && continue
        local session_name
        session_name=$(basename "$status_file" .status)
        if ! echo "$active_sessions" | grep -q "^${session_name}$"; then
            rm -f "$status_file"
        fi
    done
}

# Function to pick a pane from a window
pick_pane() {
    local session="$1"
    local window_index="$2"

    # Get panes for the window
    local panes
    panes=$(tmux list-panes -t "${session}:${window_index}" -F '#P: #{pane_current_command}' 2>/dev/null)

    if [[ -z "$panes" ]]; then
        echo "No panes found in window: ${session}:${window_index}"
        return 1
    fi

    # Launch fzf for pane selection
    local result
    result=$(echo "$panes" | fzf \
        --border-label="┃ ${session}:${window_index} panes ┃" \
        --prompt="Select pane: " \
        --header="Enter: switch | Esc: back")

    local pane_selection
    pane_selection="$result"

    # Exit if no selection
    if [[ -z "$pane_selection" ]]; then
        return 0
    fi

    # Extract pane index (first field before colon)
    local pane_index
    pane_index=$(echo "$pane_selection" | cut -d':' -f1 | xargs)

    # Switch to the pane
    tmux switch-client -t "${session}:${window_index}"
    tmux select-pane -t "${session}:${window_index}.${pane_index}"
}

# Function to pick a window from a session
pick_window() {
    local session="$1"

    # Get windows for the session
    local windows
    windows=$(tmux list-windows -t "$session" -F '#I: #W' 2>/dev/null)

    if [[ -z "$windows" ]]; then
        echo "No windows found in session: $session"
        return 1
    fi

    # Launch fzf for window selection
    local result
    result=$(echo "$windows" | fzf \
        --border-label="┃ $session windows ┃" \
        --prompt="Select window: " \
        --header="Enter: switch | Ctrl-O: panes | Ctrl-X: kill | Esc: back" \
        --expect=ctrl-x,ctrl-o)

    local key
    key=$(echo "$result" | sed -n '1p')
    local window_selection
    window_selection=$(echo "$result" | sed -n '2p')

    # Exit if no selection
    if [[ -z "$window_selection" ]]; then
        return 0
    fi

    # Extract window index (first field before colon)
    local window_index
    window_index=$(echo "$window_selection" | cut -d':' -f1 | xargs)

    # Handle pane picker action (Ctrl-O)
    if [[ "$key" == "ctrl-o" ]]; then
        pick_pane "$session" "$window_index"
        return 0
    fi

    # Handle kill action
    if [[ "$key" == "ctrl-x" ]]; then
        tmux kill-window -t "${session}:${window_index}"
        echo "Killed window: $window_selection"
        return 0
    fi

    # Handle switch action
    tmux switch-client -t "${session}:${window_index}"
}

# Cleanup stale Claude status files
cleanup_stale_status

# Get current session name
current_session=$(tmux display-message -p '#S')

# Get all other sessions (excluding current and popup sessions), sorted by recency with relative time
now=$(date +%s)
sessions=$(tmux list-sessions -F '#{session_activity} #S' 2>/dev/null | \
    grep -v " ${current_session}$" | \
    grep -v " _popup_" | \
    sort -rn | \
    while read -r activity name; do
        age=$(( now - activity ))
        claude_status=$(get_claude_status "$name")
        if [[ -n "$claude_status" ]]; then
            printf "%s (%s) %s\n" "$name" "$(format_relative_time $age)" "$claude_status"
        else
            printf "%s (%s)\n" "$name" "$(format_relative_time $age)"
        fi
    done)

# Exit gracefully if no other sessions
if [[ -z "$sessions" ]]; then
    echo "No other sessions available"
    exit 0
fi

# Launch fzf with session picker
result=$(echo "$sessions" | fzf \
    --ansi \
    --border-label="┃ tmux sessions ┃" \
    --prompt="Switch to: " \
    --header="Enter: switch/create | Ctrl-O: windows | Ctrl-X: kill | Esc: cancel" \
    --print-query \
    --expect=ctrl-x,ctrl-o)

# Parse fzf output
# Line 1: The query string (what user typed)
# Line 2: The key pressed (empty for enter, "ctrl-x" for ctrl-x, "ctrl-o" for ctrl-o)
# Line 3: The selected item (if any)
query=$(echo "$result" | sed -n '1p')
key=$(echo "$result" | sed -n '2p')
# Strip relative time and optional Claude status suffix
selection=$(echo "$result" | sed -n '3p' | sed 's/ ([^)]*ago).*$//')

# Exit if no action taken (user pressed Esc without typing anything)
if [[ -z "$key" && -z "$selection" && -z "$query" ]]; then
    exit 0
fi

# Handle window picker action (Ctrl-O)
if [[ "$key" == "ctrl-o" ]]; then
    if [[ -n "$selection" ]]; then
        pick_window "$selection"
    fi
    exit 0
fi

# Handle kill action (Ctrl-X) - re-run picker after kill
if [[ "$key" == "ctrl-x" ]]; then
    if [[ -n "$selection" ]]; then
        tmux kill-session -t "$selection"
    fi
    exec "$0"
fi

# Handle switch/create action (Enter)
if [[ -n "$selection" ]]; then
    # Session was selected from list - switch to it
    tmux switch-client -t "$selection"
elif [[ -n "$query" ]]; then
    # User typed a new name - create and switch to new session
    tmux new-session -d -s "$query" -c "$HOME"
    apply_layout "$query" "$HOME"
    tmux switch-client -t "$query"
fi
